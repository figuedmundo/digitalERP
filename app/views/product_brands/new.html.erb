<h1>Nuevas Marcas</h1>

<div class="row">
  <div class="span6 offset2">
    <%= simple_form_for(@brand, :html => {:class => 'form-horizontal' }) do |f| %>

      <%= f.input :description %>

      <div class="form-actions">
        <%= f.submit "Guardar", class: "btn btn-large btn-primary" %>
        <%= link_to "Cancelar", new_product_brand_path, class: "btn btn-large" %>
      </div>
    <% end %>
  </div>
</div>