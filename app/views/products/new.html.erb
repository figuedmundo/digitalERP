<h1>Registrar Producto</h1>

<div class="row">
  <div class="span6 offset2">
    <%= simple_form_for(@product, :html => {:class => 'form-horizontal' }) do |f| %>

      <%= f.association :product_brand, label_method: :description, value_method: :id %>
      <%= f.input :description %>
      <%= f.input :code %>


      <div class="form-actions">
        <%= f.submit "Registrar Producto", class: "btn btn-large btn-primary" %>
        <%= link_to "Cancelar", new_product_path, class: "btn btn-large" %>
      </div>
    <% end %>
  </div>
</div>