<h1>Compra</h1>

<div class="row">
  <div class="span6 offset2">
    <%= simple_form_for(@buy, :html => {:class => 'form-horizontal' }) do |f| %>

      <%= f.association :product, label_method: :code %>
      <%= f.association :supplier, label_method: :name %>

      <%= f.input :amount %>
      <%= f.input :price %>

      <div class="form-actions">
        <%= f.submit "Comprar", class: "btn btn-large btn-primary" %>
        <%= link_to "Cancelar", new_buy_path, class: "btn btn-large" %>
      </div>
    <% end %>
  </div>
</div>

