<h1>Registrar Proveedor</h1>

<div class="row">
  <div class="span6 offset2">
    <%= simple_form_for(@supplier, :html => {:class => 'form-horizontal' }) do |f| %>

      <%= f.input :name %>
      <%= f.input :city %>
      <%= f.input :address %>
      <%= f.input :email %>
      <%= f.input :phone %>
      <%= f.input :cellphone %>

      <div class="form-actions">
        <%= f.submit "Registrar Proveedor", class: "btn btn-large btn-primary" %>
        <%= link_to "Cancelar", new_supplier_path, class: "btn btn-large" %>
      </div>
    <% end %>
  </div>
</div>