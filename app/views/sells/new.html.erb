<h1>Venta</h1>

<div class="row">
  <div class="span6 offset2">
    <%= simple_form_for(@sell, :html => {:class => 'form-horizontal' }) do |f| %>

      <%= f.association :product, label_method: :code_description %>
      <%= f.association :customer, label_method: :full_name%>

      <%= f.input :amount, wrapper: :append  do %>
        <%= f.input_field :amount %>
        <%= content_tag :span, "Bs", class: "add-on" %>
      <% end %>

      <%= f.input :price, wrapper: :append  do %>
        <%= f.input_field :price %>
        <%= content_tag :span, "Bs", class: "add-on" %>
      <% end %>

    
      <div class="form-actions">
        <%= f.submit "Vender", class: "btn btn-large btn-primary" %>
        <%= link_to "Cancelar", new_sell_path, class: "btn btn-large" %>
      </div>
    <% end %>
  </div>
</div>

